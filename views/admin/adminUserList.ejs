              });
      }
  </script>
  <script>
    function orderList(userId) {
        fetch("/admin/userorderList", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({ userId })
        })
            .then(response => {
                if (response.ok) {
                    return response.text();
                } else {
                    throw new Error("Request failed.");
                }
            })
            .then(html => {
                document.open();
                document.write(html);
                document.close();
            })
            .catch(error => {
                console.log(error);
            });
    }
