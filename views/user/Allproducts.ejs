<style>
	.row {
		display: flex;
		justify-content: center;
	}

	.store-filter {
	
		color: white;
		padding: 10px;
		display: flex;
		align-items: center;
	}

	.store-pagination {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
	}

	.store-pagination li {
		margin-right: 10px;
	}

	.store-pagination li:last-child {
		margin-right: 0;
	}

	.store-pagination li a {
		display: inline-block;
		padding: 5px 10px;
		background-color: gray;
		color: white;
		text-decoration: none;
		border-radius: 5px;
	}

	.store-pagination li.active a {
		background-color: black;
	}
</style>
</head>

<body>

<div class="super_container">

	<!-- Header -->

	<% if(typeof userData !="undefined" ){ %>
		<%-include('userloged') %>
			<%}else{%>
				<%- include('usernotloged') %>
					<%}%>


	<!-- Hamburger Menu -->



	<div class="container product_section_container">
        <div class="row">
            <div class="col product_section clearfix">
    
                <!-- Breadcrumbs -->
    
    
                <!-- Sidebar -->
    
               
				<div class="sidebar">
					

					<!-- Brand -->
					<div class="sidebar_section">
						<div class="sidebar_title">
							<h5>Brand</h5>
						</div>
						
						<ul class="checkboxes">
							<% brandOption.forEach((j)=> { %>
								<div class="input-checkbox">
								  <input type="checkbox" id="brand-<%= j %>" <% if
									(brandSelected.includes(j)) { %>checked<% } %>>
									<label for="brand-<%= j %>">
									  <span></span>
									  <%= j %>
									</label>
								</div>
								<% }); %>
						</ul>
						
					</div>

					<!-- Sizes -->
					<div class="sidebar_section">
						<div class="sidebar_title">
							<h5>Sizes</h5>
						</div>
						<ul class="checkboxes">
							<% sizeOption.forEach((j)=> { %>
								<div class="input-checkbox">
								  <input type="checkbox" id="size-<%= j %>" <% if
									(sizeSelected.includes(j)) { %>checked<% } %>>
									<label for="size-<%= j %>">
									  <span></span>
									  <%= j %>
									</label>
								</div>
								<% }); %>
						</ul>
					</div>

					<!-- Color -->
					<div class="sidebar_section">
						<div class="sidebar_title">
							<h5>Color</h5>
						</div>
						<ul class="checkboxes">
							<% colorOption.forEach((j)=> { %>
								<div class="input-checkbox">
								  <input type="checkbox" id="color-<%= j %>" <% if
									(colorSelected.includes(j)) { %>checked<% } %>>
									<label for="color-<%= j %>">
									  <span></span>
									  <%= j %>
									</label>
								</div>
								<% }); %>
						</ul>
						<div class="show_more">
							<button type="submit" class="bg-dark text-white p-2" style="border: none; border-radius: 5px;"
							onclick="filtering( 1, 2)">Apply</button>
						</div>
					</div>

				</div>
    
                <!-- Main Content -->
    
                <div class="main_content">
    
                    <!-- Products -->
    
                    <div class="products_iso">
                        <div class="row">
                            <div class="col">
    
                                <!-- Product Sorting -->
								<div class="product_sorting_container product_sorting_container_top">
									<ul class="product_sorting">
										<label style="color: black;">
											Sort By Price:
											<select class="input-select" id="optionSelect" placeholder="select"
											  onchange="filtering(1,2)">
											  <option value="0" <%=sort===0 ? "selected" : "" %>></option>
											  <option value="1" <%=sort===1 ? "selected" : "" %>>Low to high
											  </option>
											  <option value="-1" <%=sort===-1 ? "selected" : "" %>>High to low
											  </option>
											</select>
										  </label>
										
											<input type="text" value="Search">
											
											
											
											
										
									</ul>
								

								</div>
            
    
                                <!-- Product Grid -->
    
                                <div class="product-grid">
    
                                    <!-- Product Item -->
									<% data.forEach(function(x,i) { %>
										<div class="product-item men">
										  <div class="product discount product_filter">
											<div class="product_image">
											  <img src="/images/uploads/<%= x.imageUrl[0] %>" alt="">
											</div>
											<div class="favorite favorite_left"></div>
											<% if(x.offerPercentage!=0) { %>
											<div class=" product_bubble  product_bubble_red product_bubble_right d-flex flex-column align-items-center">  
											  <span class=""><%= x.offerPercentage %> %
											  </span>
											  </div><% }; %>
											<div class="product_info">
											  <h6 class="product_name"><a href="#"><%= x.productName %>/a></h6>
											  <div class="product_price">₹<%= x.price %> <span> <% if(x.offerPercentage!=0) { %><del
												class="product-old-price">
												₹<%= x.offerPrice %> 
											  </del>
											  <% }; %></span></div>
											</div>
										  </div>
										  <div class="red_button add_to_cart_button"><a onclick="window.location.href='/login/prodDetails/<%= x._id %>'">View</a></div>
										</div>
										<% }); %>
    
                                </div>
								<div class="row">
									<div class="store-filter text-center">
									  <ul class="store-pagination d-flex justify-content-center">
										<% for (let i=1; i <=totalPages; i++) { %>
										  <li <% if (i===page) { %>class="active"<% } %>><a href="#"
												onclick="filtering('<%= i %>','<%= limitVal %>')">
												<%= i %>
											  </a></li>
										  <% } %>
									  </ul>
									</div>
								  </div>
                            </div>
                        </div>
                    </div>
    
                    <!-- Pagination -->
    
                    
                </div>
    
            </div>
        </div>
    </div>
	<!-- Benefit -->

	<div class="benefit">
		<div class="container">
			<div class="row benefit_row">
				<div class="col-lg-3 benefit_col">
					<div class="benefit_item d-flex flex-row align-items-center">
						<div class="benefit_icon"><i class="fa fa-truck" aria-hidden="true"></i></div>
						<div class="benefit_content">
							<h6>free shipping</h6>
							<p>Suffered Alteration in Some Form</p>
						</div>
					</div>
				</div>
				<div class="col-lg-3 benefit_col">
					<div class="benefit_item d-flex flex-row align-items-center">
						<div class="benefit_icon"><i class="fa fa-money" aria-hidden="true"></i></div>
						<div class="benefit_content">
							<h6>cach on delivery</h6>
