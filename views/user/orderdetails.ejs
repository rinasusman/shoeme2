  <!-- Custom stlylesheet -->
  
  <style>
    /* Styling for the table */
    table {
      width: 100%;
      border-collapse: collapse;
    }

    /* Styling for the table header */
    thead th {
      background-color: #f5f5f5;
      text-align: left;
      padding: 10px;
      font-weight: bold;
    }

    /* Styling for alternating table rows */
    tbody tr:nth-child(even) {
      background-color: #f9f9f9;
    }

    /* Styling for table cells */
    td {
      padding: 10px;
    }

    /* Styling for the cancel button */
    .btn-danger {
      background-color: #dc3545;
      color: #fff;
      border: none;
      padding: 5px 10px;
      cursor: pointer;
      font-size: 14px;
    }

    .card {
      box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
    }

    .card {
      position: relative;
      display: flex;
      flex-direction: column;
      min-width: 0;
      word-wrap: break-word;
      background-color: #fff;
      background-clip: border-box;
      border: 0 solid rgba(0, 0, 0, .125);
      border-radius: 1rem;
    }

    .text-reset {
      --bs-text-opacity: 1;
      color: inherit !important;
    }

    a {
      color: #5465ff;
      text-decoration: none;
    }
    .zoomable {
  cursor: zoom-in;
}

.zoomed {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  background-color: rgba(0, 0, 0, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
}

.zoomed img {
  max-width: 90%;
  max-height: 90%;
}


  </style>



</head>

<body>

  <div class="super_container">

    <!-- Header -->

    <%-include('userloged') %>


      <div id="breadcrumb" class="section">
        <!-- container -->
        <div class="container">
          <!-- row -->
          <div class="row">
            <div class="col-md-12">
              <h3 class="breadcrumb-header">Order Details</h3>
            </div>
          </div>
          <!-- /row -->
        </div>
        <!-- /container -->
      </div>
      <div class="container-fluid">

        <div class="container">
          <!-- Title -->
         
          <% orderData.forEach((i)=> { %>
            <div class="d-flex justify-content-between align-items-center py-3">
              <h2 class="h5 mb-0"><a href="#" class="text-muted" style="font-weight: bold;"></a> Order #<%= i._id %>
              </h2>
            </div>

            <!-- Main content -->
            <div class="row">
              <div class="col-lg-8">
                <!-- Details -->
                <div class="card mb-4">
                  <div class="card-body">
                    <div class="mb-3 d-flex justify-content-between">
                      <div>
                        <span class="me-3">
                          <%= i.orderDate %>
                        </span>
                        <span class="me-3">#<%= i._id %></span>

                        <span class="badge rounded-pill bg-info">
                          <%= i.status %>
                        </span>
                      </div>
                      <div class="d-flex">
                        <!-- <button class="btn btn-link p-0 me-3 d-none d-lg-block btn-icon-text"><i class="bi bi-download"></i> <span class="text">Invoice</span></button> -->

                      </div>
                    </div>
                    <table class="table table-borderless">
                      <tbody>
                        <% i.productDetails.forEach((j)=> { %>
                          <tr>
                            <td>

                              <div class="d-flex mb-2">
                                <div class="flex-shrink-0">
                                  <img src="/images/uploads/<%= j.imageUrl[0] %>" alt="" width="100" class="img-fluid zoomable">
                                </div>
                                <div class="flex-lg-grow-1 ms-3">
                                  <h6 class="small mb-0"><a href="#" class="text-reset" style="font-weight: bold; font-size: larger;">
                                      <%= j.productName %>
                                    </a></h6>
                                  <span class="small">Color:  <%= j.color %></span>
                                  <br>
                                  <span class="small">Size:  <%= j.size %></span>
                                </div>
                              </div>
                            </td>
                            <% i.item.forEach((j) => { %>
                            <td>
                            
                                <div class="tableHeight">QTY:<%= j.quantity %></div>
                            
                            </td>
                            <% }); %>
                      
                                <td class="text-end">
                                   ₹<%= j.price %>
                                </td>

                          </tr>
                          <% }); %> 
                        
                      </tbody>
                      <tfoot>
                        <tr>
                          <td colspan="2">Subtotal</td>
                          <td class="text-end">₹<%= i.totalPrice %></td>
                        </tr>
                        <tr>
                          <td colspan="2">Shipping</td>
                          <td class="text-end">Free</td>
                        </tr>
                        <tr>
                          <td colspan="2"></td>
                          <td class="text-danger text-end"></td>
                        </tr>
                        <tr class="fw-bold">
                          <td colspan="2">TOTAL</td>
                          <td class="text-end text-danger">₹<%= i.totalPrice %></td>
                        </tr>
                      </tfoot>
                    </table>
                  </div>
                </div>
                <!-- Payment -->
                <div class="card mb-4">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-lg-6">
                        <h3 class="h6">Payment Method</h3>
                        <p><%= i.paymentType %> <br>
                          ₹<%= i.totalPrice %> </p>
                      </div>
                      <div class="col-lg-6">
                        <h3 class="h6">Billing address</h3>
                        <% userData.address.forEach((i, index)=> { %>
                          <address>
                            <strong> <%= i.fullname %></strong><br>
                            <%= i.address %>, <%= i.city %><br>
                            <%= i.country %>,  <%= i.pin %><br>
                            <abbr title="Phone">P:</abbr>  <%= i.tel %>
                          </address>
                        <% }) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-4">
                <!-- Customer Notes -->
                <div class="card mb-4">
                  <div class="card-body">
                    <h3 class="h6">Expected Delivery Date:</h3>
                    <p><%= i.deliveryDate %></p>
                    <% if (i.status==='Placed' || i.status==='Shipping' || i.status==='Dispatched' )
                                  { %>
                                  <button class="btn btn-danger"
                                    onclick="cancelOrder('<%= i._id %>')">Cancel</button>
                                    <% } if (i.status==='Delivered') 
                                    { %>
                                      <button class="btn btn-danger"
                                      onclick="returnOrder('<%= i._id %>')">Return</button>
                                      <% } %>
                                      
                  </div>
                </div>
                <div class="card mb-4">
                  <!-- Shipping information -->
                  <div class="card-body">
                    <h3 class="h6">Shipping Information</h3>
                    <strong>ShoeME</strong>
                    <span><a href="#" class="" target="_blank"><%= i._id %></a> <i
                        class="bi bi-box-arrow-up-right"></i> </span>
                    <hr>
                    <h3 class="h6">Shipping Address</h3>
                    <% userData.address.forEach((i, index)=> { %>
                      <address>
                        <strong> <%= i.fullname %></strong><br>
                        <%= i.address %>, <%= i.city %><br>
                        <%= i.country %>,  <%= i.pin %><br>
                        <abbr title="Phone">P:</abbr>  <%= i.tel %>
                      </address>
                    <% }) %>
                  </div>
                </div>
              </div>
            </div>
        </div>
        <% }); %>
      </div>
      <!-- /container -->
  </div>

